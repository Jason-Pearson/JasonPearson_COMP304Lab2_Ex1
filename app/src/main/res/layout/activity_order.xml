<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/order_Activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jason.jasonpearson_comp304lab2_ex1.Order">

    <TextView
        android:id="@+id/message_Order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12pt"
        android:text="Order"
        android:textStyle="bold"
        android:textColorHighlight="@color/colorAccent"
        />
    <TextView
        android:layout_below="@+id/message_Order"
        android:id="@+id/display_Cuisine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationY="0dp"
        android:textSize="10pt"
        android:text="Cuisine"
        android:textColorHighlight="@color/colorPrimaryDark"
        />
    <TextView
        android:layout_below="@+id/display_Cuisine"
        android:id="@+id/display_Restaurant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:translationY="-5dp"
        android:text="Restaurant"
        android:textColorHighlight="@color/colorPrimaryDark"
        />
    <TextView
        android:layout_below="@+id/display_Restaurant"
        android:id="@+id/display_Food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:translationY="-10dp"
        android:text="Food"
        android:textColorHighlight="@color/colorPrimaryDark"
        />


    <TextView
        android:layout_below="@id/display_Food"
        android:id="@+id/message_Customer_Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12pt"
        android:translationY="10dp"
        android:text="Customer Info"
        android:textStyle="bold"
        android:textColorHighlight="@color/colorAccent"
        />
    <TextView
        android:layout_below="@+id/message_Customer_Info"
        android:id="@+id/display_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationY="5dp"
        android:textSize="10pt"
        android:text="Name"
        android:textColorHighlight="@color/colorPrimaryDark"
        />
    <TextView
        android:layout_below="@+id/display_Name"
        android:id="@+id/display_Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:text="Email"
        android:textColorHighlight="@color/colorPrimaryDark"
        />
    <TextView
        android:layout_below="@+id/display_Email"
        android:id="@+id/display_Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:translationY="-5dp"
        android:text="Address"
        android:textColorHighlight="@color/colorPrimaryDark"
        />
    <TextView
        android:layout_below="@+id/display_Address"
        android:id="@+id/display_Fav_Food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:translationY="-10dp"
        android:text="Fav Food"
        android:textColorHighlight="@color/colorPrimaryDark"
        />
    <TextView
        android:layout_below="@+id/display_Fav_Food"
        android:id="@+id/display_Fav_Chef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:translationY="-15dp"
        android:text="Fav Chef"
        android:textColorHighlight="@color/colorPrimaryDark"
        />


    <TextView
        android:layout_below="@+id/display_Fav_Chef"
        android:id="@+id/message_last_Order"
        android:layout_width="200dp"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:translationY="-10dp"
        android:textSize="10pt"
        android:textStyle="bold"
        android:textColor="#0090F0"
        android:textColorHighlight="@color/colorAccent"
        android:text="THANK YOU FOR ORDERING! PRESS THE LOGO TO GO BACK" />
    <ImageButton
        android:id="@+id/logo_button"
        android:layout_alignTop="@+id/message_last_Order"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/logo"
        android:onClick="Reset"
        android:translationY="-15dp"
        android:padding="-50dp"
        android:layerType="hardware"
        />
</RelativeLayout>
</ScrollView>